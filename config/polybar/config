;tray-transparent = true
tray-background = #bf616a


[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label> <bar>
label = " " 
label-foreground = #8fbcbb
format-prefix = ${hacks.module-margin}
format-suffix = ${hacks.module-margin}
bar-width = 10
bar-indicator = :
bar-indicator-foreground = #8fbcbb
bar-fill = :
bar-fill-foreground = #8fbcbb
bar-empty = :
bar-empty-foreground = #2e3440

[module/close]
type = custom/script
exec = echo "X"
format = <label>

label = "  "
format-foreground = #8fbcbb
click-left = bspc node -c

[module/maximize]
type = custom/script
exec = echo "M"
format = <label>

label = "  "
format-foreground = #8fbcbb
click-left = bspc desktop -l next


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout> <label-indicator>
format-spacing = 0
label-layout =   %layout%
label-layout-padding = 2
label-layout-foreground = #d08770


[module/xwindow]
type = internal/xwindow

format = <label>
label = %title%
label-maxlen = 50
format-foreground = 8fbcbb


[module/bspwm]
type = internal/bspwm

label-focused = %icon%
